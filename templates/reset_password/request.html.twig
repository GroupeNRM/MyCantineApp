{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('request') }}
{% endblock %}

{% block title %}YoungFood - Demande nouveau mot de passe{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row vh-100 d-flex align-items-center justify-content-center">
            <div class="col-md-8">
                <div class="row justify-content-center lm-logo">
                    <div class="text-center">
                        <img src="{{ asset('build/youngfood.svg') }}" alt="logo youngfood" class="mx-auto">
                        <h1 class="mb-4">Vous avez oubli√© votre mot de passe ? <br> Vite, <span class="inner-green">demandez en un nouveau !</span></h1>
                    </div>
                </div>
                <div class="row justify-content-center">
                    {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div class="form-group text-center">
                            <button class="btn btn-primary">Envoyer</button>
                        </div>
                    {{ form_end(requestForm) }}
                </div>
                <div class="row justify-content-center">
                    <div class="text-center">
                        <a href="{{ path('app_login') }}">Connectez-vous</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}